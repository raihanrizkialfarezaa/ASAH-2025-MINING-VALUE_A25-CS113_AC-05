# AI/ML Service Configuration
# Copy this file to .env and update the values

# Server Configuration
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b
# Alternative models: llama3:8b, mistral:7b

# Database Connection (for direct DB access if needed)
DATABASE_URL=postgresql://user:password@localhost:5432/mining_db

# Backend Express API URL
BACKEND_API_URL=http://localhost:5000

# Model Configuration
MODEL_FOLDER=models
DATA_FOLDER=data

# Simulation Parameters
MAX_SIMULATION_TIME=480  # in minutes (8 hours)
DEFAULT_SHIFT_DURATION=8  # in hours

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/ai_service.log
